{
  "name": "sha512crypt",
  "version": "1.0.0",
  "description": "Nodejs implementation of sha512crypt",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "prepublish": "npm run build",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "npm run clean && tsc -w",
    "watch-test": "npm run test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markusberg/sha512crypt.git"
  },
  "keywords": [
    "sha512crypt"
  ],
  "author": "Markus Berg",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/markusberg/sha512crypt/issues"
  },
  "homepage": "https://github.com/markusberg/sha512crypt#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/jest": "^23.1.5",
    "chai": "^4.1.2",
    "jest": "^23.4.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  }
}
